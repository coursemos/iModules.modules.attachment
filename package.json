{
    "id": "tools.moimz.imodules.modules.attachment",
    "icon": "xi xi-download-my",
    "title": {
        "ko": "첨부파일"
    },
    "version": "4.0.0",
    "description": {
        "ko": "아이모듈에서 업로드되는 모든 첨부파일을 관리하는 모듈입니다."
    },
    "author": {
        "name": "Arzz",
        "email": "arzz@arzz.com"
    },
    "homepage": "https://www.imodules.io",
    "versionChecker": "https://api.moimz.com/download/latest",
    "dependencies": {
        "core": "4.0.0"
    },
    "language": "ko",
    "global": true,
    "admin": true,
    "configs": {
        "template": {
            "type": "template",
            "label": {
                "ko": "기본템플릿"
            },
            "target": {
                "type": "module",
                "name": "attachment"
            },
            "default": "default"
        },
        "max_file_size": {
            "type": "number",
            "label": {
                "ko": "최대파일용량"
            },
            "default": 20
        },
        "max_upload_size": {
            "type": "number",
            "label": {
                "ko": "총업로드용량"
            },
            "default": 200
        }
    },
    "databases": {
        "drafts": {
            "columns": {
                "hash": {
                    "type": "char",
                    "length": 50,
                    "comment": "파일고유값"
                },
                "name": {
                    "type": "varchar",
                    "length": 255,
                    "comment": "파일명"
                },
                "path": {
                    "type": "varchar",
                    "length": 255,
                    "comment": "파일경로"
                },
                "size": {
                    "type": "bigint",
                    "comment": "파일크기"
                },
                "created_at": {
                    "type": "int",
                    "comment": "생성일자"
                },
                "expired_at": {
                    "type": "int",
                    "comment": "만료일자"
                }
            },
            "indexes": {
                "hash": "primary_key"
            },
            "comment": "첨부파일 업로드 대기목록"
        }
    }
}
